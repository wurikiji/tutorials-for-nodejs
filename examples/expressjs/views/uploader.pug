doctype html
html
  head
    meta(charset='utf-8')
  body
    - if (_message != null)
      script(type='text/javascript').
        alert("#{_message}");
    p
      h2 Files
      each fname in _files
        li
          a(href=_dirpath + fname)= fname
    p
      h2 Upload New File
      form(action='/upload' method='post' enctype='multipart/form-data')
        input(type='file' name='userfile')
        input(type='submit' value='Upload')
